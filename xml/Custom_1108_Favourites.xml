<?xml version="1.0" encoding="UTF-8"?>
<window id="1108">
	<defaultcontrol always="true">50</defaultcontrol>
	<include>allViewIds</include>
	<onload>ClearProperty(ShowViewSubMenu,Home)</onload>
	<onunload>ClearProperty(ShowViewSubMenu,Home)</onunload>
	<!-- <include>Animation_DialogPopupOpenClose</include> -->
	<include>animation_window_open_close</include>
	<controls>
	
	<!-- Video Background -->
	       <!-- Video Background -->
        <include>GlobalBackground</include>
		<!--Header-->
        <include>Header</include>
 
		<!--NowPlaying-->
		<include condition="!Skin.HasTheme(classic) + !Skin.HasSetting(LowPerformanceMode)">NowPlayingModern</include>

		<!-- all Views -->
        <!-- <include>allViews</include> -->
		
		
			<control type="group">
			<!-- <centerleft>50%</centerleft> -->
			<!-- <width>600</width> -->
			<!-- <centertop>60%</centertop> -->
			<!-- <height>700</height> -->

			<!-- <include>animation_window_open_close</include> -->
            <!-- <visible>!Window.IsVisible(filebrowser) + !Window.IsVisible(selectdialog) + !Window.IsVisible(selectdialog) + !Window.IsVisible(progressdialog) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(yesnodialog) + !Window.IsVisible(okdialog) + !Window.IsVisible(addonsettings)</visible> -->

<include>animation_view_change</include>
<visible>Control.IsVisible(50)</visible>

			<control type="panel" id="50">
				<posx>60</posx>
				<bottom>13%</bottom>
				<width>1820</width>
				<height>765</height>
				<!-- <orientation>vertical</orientation>  -->
				<!-- <onleft>9000</onleft> -->
				<onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
				<onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="536">icon</viewtype> 
				<preloaditems>4</preloaditems>
				<pagecontrol>60</pagecontrol>
				<!-- <animation effect="fade" time="200">VisibleChange</animation> -->
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="255" width="260">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>240</width>
						<height>240</height>
						<texture fallback="DefaultVideo.png" background="true">$INFO[ListItem.Icon]</texture>
						<include>thumbsborder_focused_alt</include>
						<fadetime>500</fadetime>
					</control>
					<control type="image" id="123">
						<left>0</left>
						<top>170</top>
						<width>240</width>
						<height>70</height>
						<texture colordiffuse="$INFO[Skin.String(TagOverlaysPanelColor)]">diffuse/poster_tag.png</texture>
						<include>thumbsborder_focused_alt</include>
					</control>
					<control type="textbox">
						<left>15</left>
						<width>220</width>
						<height>60</height>
						<top>175</top>
						<font>font10</font>
						<include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">aligncenter</include>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$INFO[Skin.String(TagOverlaysTextColor)]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="255" width="260">
					<control type="group">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>240</width>
							<height>240</height>
							<texture fallback="DefaultVideo.png" background="true">$INFO[ListItem.Icon]</texture>
							<bordertexture colordiffuse="$VAR[ViewDetailsFocusColor]">home/home_matte2.png</bordertexture>
							<include>thumbsborder_focused_alt</include>
							<fadetime>500</fadetime>
							<!-- <visible>Control.IsEnabled(3006)</visible> -->
						</control>
						<control type="image">
							<left>0</left>
							<top>170</top>
							<width>240</width>
							<height>70</height>
							<texture colordiffuse="$INFO[Skin.String(TagOverlaysPanelColor)]">diffuse/poster_tag.png</texture>
							<include>thumbsborder_focused_alt</include>
						</control>
						<control type="textbox">
							<left>15</left>
							<top>175</top>
							<width>220</width>
							<height>60</height>
							<font>font10</font>
							<include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">aligncenter</include>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>$INFO[Skin.String(TagOverlaysTextColor)]</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
				</focusedlayout>
	
				<content>


					<include>custom_content</include>

				</content>
			</control>
				
		<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(50) + Integer.IsGreater(Container(50).NumItems,0)</visible>
				<right>15</right>
				<bottom>13%</bottom>
				<height>765</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>50</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
			</control>

<!-- was ist Control.IsVisible(6002) Alphabet Scrollbar -->
<!-- was ist <ondown>6000</ondown> ? -->
			
		</control>
		
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
        <include condition="Skin.HasSetting(DebugGrid) | Skin.HasSetting(DebugInfo)">DebugInfo</include>
	
		<!-- <include>DialogOverlayExtra</include> -->

		<include condition="!Skin.HasSetting(nofooterbar)">Footer</include>

	</controls>
</window>
